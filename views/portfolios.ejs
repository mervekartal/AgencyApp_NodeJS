<%- include('partials/_header') -%>
    <%- include('partials/_navigation') -%>

        <!-- Portfolio Grid-->
        <section class="page-section bg-dark" id="portfolio">
            <div class="container">
                <div class="text-center">
                    <h2 class="section-heading text-uppercase text-white">Portfolio</h2>
                    <!-- <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3> -->
                </div>
                <div class="row">
                    <!-- <div class="col-lg-12 mb-3">
                        <button class="btn btn-md btn-warning text-white" data-toggle="modal" data-target="#addPortfolio"><span>Add New Portfolio</span></button>
                    </div> -->

                    <% for(let i = 0; i < portfolios.length; i++) { %>
                    <div class="col-lg-4 col-sm-6 mb-4">
                        <!-- Portfolio item 1-->
                        <div class="portfolio-item">
                            <a class="portfolio-link" data-bs-toggle="modal" href="portfolios/<%= portfolios[i].slug %>">
                                <div class="portfolio-hover">
                                    <div class="portfolio-hover-content"><i class="fas fa-info fa-3x"></i></div>
                                </div>
                                <img class="img-fluid" src="/assets/img/portfolio/1.jpg" alt="..." />
                            </a>
                            <div class="portfolio-caption">
                                <div class="portfolio-caption-heading"><a href="portfolios/<%= portfolios[i].slug %>"><%= portfolios[i].name %></a></div>
                                <div class="portfolio-caption-subheading text-muted"><%= portfolios[i].description.substring(0.15) %> ... </div>
                            </div>
                        </div>
                    </div>
                    <% } %>
        
                </div>
            </div>
        </section>


<%- include('partials/_footer') -%>
